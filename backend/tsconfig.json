{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,  // Habilita a interoperabilidade com módulos ES
    "skipLibCheck": true,     // Ignora verificação de tipos em arquivos de definição (.d.ts)
    "forceConsistentCasingInFileNames": true, // Garante consistência em nomes de arquivos
    "types": ["node", "express", "jsonwebtoken"], // Inclui tipos relevantes
    "typeRoots": [
      "./src/custom_typings",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*"],      // Inclui todos os arquivos na pasta src
  "exclude": ["node_modules"]   // Exclui a pasta node_modules
}
